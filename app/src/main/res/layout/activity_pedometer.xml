<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/start_workout_button"
            android:text="Start Pedometer"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/start_workout_button"
            android:text="Stop Pedometer"
            android:textColor="@color/white" />
    </RelativeLayout>

 <GridLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="180dp"
     android:layout_marginLeft="100dp"
     android:background="@color/colorPrimary"
     android:layout_marginRight="100dp"
     android:rowCount="4"
     android:columnCount="2">

     <TextView
     android:id="@+id/ste"
     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
     android:fontFamily="cursive"
     android:text="Steps         :"
     android:layout_gravity="fill_horizontal"
     android:textColor="#fff"
     android:layout_marginBottom="15dp"
     android:textSize="20dp"
         />

     <TextView
         android:id="@+id/tv_steps"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="0"
         android:textSize="20dp"
         android:fontFamily="cursive"
         android:gravity="center"
         android:layout_marginBottom="15dp"
         android:textColor="@color/white" />

     <TextView
         android:id="@+id/time1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="cursive"
         android:text="Time         :"
         android:layout_marginBottom="15dp"
         android:layout_gravity="fill_horizontal"
         android:textColor="#fff"
         android:textSize="20dp" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="cursive"
         android:textSize="20dp"
         android:text="00:00"
         android:layout_marginBottom="15dp"
         android:textColor="#fff"
         android:id="@+id/time"/>
     <TextView
         android:id="@+id/dis"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="cursive"
         android:text="Distance   :"
         android:layout_marginBottom="15dp"
         android:layout_gravity="fill_horizontal"
         android:textColor="#fff"
         android:textSize="20dp" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="cursive"
         android:layout_marginBottom="15dp"
         android:text="0 km"
         android:textSize="20dp"
         android:textColor="#fff"
         android:id="@+id/distance"/>

     <TextView
         android:id="@+id/cal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="cursive"
         android:layout_gravity="fill_horizontal"
         android:text="Calories    :"
         android:layout_marginBottom="15dp"
         android:textColor="#fff"
         android:textSize="20dp" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="cursive"
         android:textSize="20dp"
         android:text="0"
         android:textColor="#fff"
         android:id="@+id/calories"/></GridLayout>

    <Button
        android:id="@+id/activity_details"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:background="@drawable/start_workout_button"
        android:text="Activity History"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/delete_history"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/start_workout_button"
        android:text="Delete Workout History"
        android:textColor="@color/white" />


</RelativeLayout>
